{
  "name": "vite-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "ts-node --esm server.ts",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.tsx",
    "coverage": "vitest run --coverage ",
    "test": "vitest",
    "build1": "vite build",
    "cypress": "cypress open",
    "cypress:run": "cypress run --env coverage=true",
    "cypress:coverage": "nyc report --reporter=text-summary",
    "cy:e2e": "npx cypress run --e2e && npx nyc report && npx nyc report --reporter=text-summary"
  },
  "dependencies": {
    "@cypress/code-coverage": "^3.10.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@reduxjs/toolkit": "^1.9.3",
    "@types/react-redux": "^7.1.25",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "cypress-file-upload": "^5.0.8",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "nyc": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.8",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.9.0",
    "serve-static": "^1.15.0",
    "ts-node": "^10.9.1",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/cypress__code-coverage": "^3.10.0",
    "@types/express": "^4.17.17",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/serve-static": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.2",
    "cypress": "^12.11.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^21.1.1",
    "prettier": "2.8.4",
    "redux-mock-store": "^1.5.4",
    "typescript": "^4.9.5",
    "vite": "^4.1.0",
    "vite-plugin-istanbul": "^4.0.1",
    "vitest": "^0.29.2"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "extension": [
      ".tsx"
    ],
    "include": [
      "src/**/*.tsx"
    ],
    "exclude": [
      "cypress/",
      "node_modules/",
      "assets/",
      "dist/",
      "src/tests/"
    ],
    "reporter": [
      "html"
    ],
    "report-dir": "coverage",
    "all": true
  }
}
